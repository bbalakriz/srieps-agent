#!/bin/bash
# SREIPS Configuration File Template
# Copy this file to config.env and fill in your values
# Usage: cp config.env.template config.env && vim config.env

# ==============================================================================
# SREIPS Core Configuration
# ==============================================================================

# Slack Integration
# Get your Slack API key from https://api.slack.com/apps
export SLACK_API_KEY="xoxb-your-slack-bot-token-here"
export SLACK_CHANNEL="sreips-helper"
# Get your Slack Signing Secret from Basic Information -> App Credentials
export SIGNING_KEY="your-slack-signing-secret-here"

# OpenShift Cluster Name
export CLUSTER_NAME="openshift-prod"

# ==============================================================================
# MinIO Configuration
# ==============================================================================

# MinIO Root Credentials
# Username must be at least 3 characters, password at least 8 characters
export MINIO_ROOT_USER="minio"
export MINIO_ROOT_PASSWORD="***REMOVED***"

# ==============================================================================
# Red Hat API MCP Server Configuration
# ==============================================================================

# Red Hat API Offline Token
# Get your offline token from https://access.redhat.com/management/api
export RH_API_OFFLINE_TOKEN="your-rh-api-offline-token-here"

# ==============================================================================
# LlamaStack Configuration
# ==============================================================================

# Inference Model Configuration
export INFERENCE_MODEL="Llama-4-Scout-17B-16E-W4A16"
export VLLM_URL="https://litellm-litemaas.apps.prod.rhoai.rh-aiservices-bu.com/v1"
export VLLM_TLS_VERIFY="true"
export VLLM_API_TOKEN="sk-your-vllm-api-token-here"

# Note: Data Science Pipelines will use MINIO_ROOT_USER and MINIO_ROOT_PASSWORD 
# from the MinIO section above - no need to set separate credentials

# ==============================================================================
# SREIPS Agent Configuration
# ==============================================================================

# Vector Database ID
export VECTOR_DB_ID="sreips_vector_id"

# Note: LLAMA_STACK_URL and MCP_ENDPOINT are automatically captured
# from OpenShift routes during installation and do not need to be set manually


